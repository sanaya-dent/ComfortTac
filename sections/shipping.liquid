{% style %}
  .t4s-shipping .t4s-shipping-content{
    display:flex;
    align-items: baseline;
  }
  .t4s-shipping-item .t4s-shipping-title{
    font-size:13px;
  }
  .t4s-shipping-list.t4s-text-start .t4s-shipping .t4s-shipping-icon{margin-right: 8px;}
  #shopify-section-shipping .flickityt4s-page-dots{display:none;}
  @media (max-width:480px){
    .t4s-shipping-list.t4s-text-start .t4s-shipping .t4s-shipping-icon{margin:auto;}
    .t4s-shipping .t4s-shipping-inner{height:100%;}
  }
   @media (min-width:351px) and (max-width:395px){
    .usp_text p{font-size:16px;}
  }
    @media (min-width:329px) and (max-width:351px){
    .usp_text p{font-size:15px;}
  }
   @media (min-width:307px) and (max-width:329px){
    .usp_text p{font-size:14px;}
  }
  @media (max-width:307px) and (min-width:285px){
    .usp_text p,.usp_top .usp_text:nth-child(1){font-size:13px!important;}
  }
  @media (max-width:285px){
    .usp_text p{font-size:12px;}
  }
{% endstyle %}
{% render 'shipping-usp' %}
{% if section.settings.carousel_mobile %}
<script>
  // var h = document.getElementById('shopify-section-shipping');
setTimeout(function() {
    var uspSection = document.getElementById('usp-section');
    if(uspSection){
    uspSection.innerHTML += document.getElementById('shopify-section-shipping').innerHTML;
    document.getElementById('shopify-section-shipping').innerHTML = '';
    }
}, 100);

  document.addEventListener('DOMContentLoaded', function() {
 // console.log('A');
    
  setTimeout(function() {
    var elements = document.querySelectorAll('.t4s-shipping.t4s-shipping-item');
    for (var i = 0; i < elements.length; i++) {
      elements[i].style.height = '100%';
    }
  //  console.log('B');
  }, 1000);

if (window.innerWidth < 768) {
setInterval(clickNextDot, 5000); // Click the next dot every 5 seconds
}
});
  function clickNextDot() {
  const dots = document.querySelectorAll('.t4s_nt_se_shipping .flickityt4s-page-dots li.dot');
    
  let currentIndex = Array.from(dots).findIndex(dot => dot.classList.contains('is-selected'));
if(currentIndex >= 0){
  // Click the next dot and wrap around to the first dot if needed
  var nextIndex = (currentIndex + 1) % dots.length;
    if(nextIndex == 3){
        nextIndex=0;
    }
  dots[nextIndex].click();
    }
}
  
</script>
